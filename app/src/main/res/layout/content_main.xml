<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kbakkoyungmail.notebook.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/btnGiris"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:background="@color/colorAccent"
        android:text="Giriş"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnKayıt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnGiris"
        android:layout_below="@+id/btnGiris"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:text="Kayıt"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        app:srcCompat="@drawable/spr"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.kbakkoyungmail.notebook.LoginTextView
        android:id="@+id/txtyazi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnGiris"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:text="Note Book"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45sp" />

</RelativeLayout>
